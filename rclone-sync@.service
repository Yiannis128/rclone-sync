[Unit]
Description=Rclone Sync for %i
After=network-online.target
Wants=network-online.target

[Service]
Type=simple
EnvironmentFile=%h/.config/rclone-sync/%i.conf
ExecStart=%h/.local/bin/rclone-sync --max-delete "${MAX_DELETE}" "${REMOTE_PATH}" "${LOCAL_DIR}"
Restart=on-failure
RestartSec=10

[Install]
WantedBy=default.target
